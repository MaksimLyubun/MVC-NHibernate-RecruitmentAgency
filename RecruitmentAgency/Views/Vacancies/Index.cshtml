
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Вакансии";
}

@if (ViewBag.user.IsAdmin() || ViewBag.user.IsJobseeker())
{
    @Html.Action("VacanciesPartial")
}

@if (ViewBag.user.IsEmployee())
{
    @Html.Action("VacanciesPartial", new { userId = ViewBag.user.Id })
}


